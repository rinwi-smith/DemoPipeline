pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/your-repo.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
                // Your build commands (e.g., npm build or other build tools)
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Deployment steps (e.g., push to production server)
            }
        }
    }
}

