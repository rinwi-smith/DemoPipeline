pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/rinwi-smith/DemoPipeline.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Test') {
            steps {
                bat 'npm test'
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build' 
		echo 'Building the application...'
            }
        }
        stage('Deploy') {
            steps {
                bat 'npm run deploy' 
		echo 'Deploying the application...'
            }
        }
    }
}
