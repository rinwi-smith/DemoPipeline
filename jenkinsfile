pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/rinwi-smith/DemoPipeline.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Lint Code') {
            steps {
                bat 'npx eslint .'
            }
        }
        stage('Test') {
            steps {
                bat 'npm test'
            }
        }
        stage('Code Coverage') {
            steps {
                bat 'npm run coverage'
                publishHTML(target: [
                    reportDir: 'coverage',
                    reportFiles: 'index.html',
                    reportName: 'Code Coverage Report'
                ])
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build' 
		echo 'Building the application...'
            }
        }
        stage('Deploy') {
            steps {
                bat 'npm run deploy' 
		echo 'Deploying the application...'
            }
        }
    }
}
